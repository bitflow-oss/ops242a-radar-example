<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="80" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" />
        <TextBlock Text="Velocity" Width="200" Height="32" Grid.Row="1" Grid.Column="0" />
        <TextBlock x:Name="txtVelocity" Width="200" Height="32" Foreground="Black" Text="0" Grid.Row="1" Grid.Column="1" />
        <Button Content="Connect OPS242A" HorizontalAlignment="Center" Width="200" Height="32" Margin="0,0,0,0" VerticalAlignment="Top" Click="ConnectUsb" Background="#FF59D018" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
